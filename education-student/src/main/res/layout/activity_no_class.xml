<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_list_gray_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp45"
            android:paddingEnd="@dimen/dp15"
            android:paddingBottom="@dimen/dp45">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp147"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/font_white"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_5cbebc" />

            </androidx.cardview.widget.CardView>


            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/course_directory"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/course_directory"
                    android:textColor="@drawable/selector_text_color"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/course_introduction"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/course_introduction"
                    android:textColor="@drawable/selector_text_color"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatRadioButton
                    android:id="@+id/teacher_introduction"
                    android:layout_width="@dimen/dp0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10"
                    android:text="@string/teacher_introduction"
                    android:textColor="@drawable/selector_text_color"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

            </RadioGroup>


            <androidx.cardview.widget.CardView
                android:id="@+id/course_directory_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10">

                    <include layout="@layout/item_no_class_course_directory" />

                    <include layout="@layout/item_no_class_course_directory" />

                    <include layout="@layout/item_no_class_course_directory" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/course_introduction_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/color_first_level"
                        android:textSize="@dimen/sp14"
                        tools:text="宫本武藏首先改动的就是被动技能，因为以往宫本的输出主要靠释放技能后的120（+25%物理加成）点物理伤害和大招的定点控制。但这样的输出显然很难在后期对敌方有足够的威胁，再加上目前射手版本都会选择非常肉的前排，这导致宫本武藏很难打出致命的输出。
而在体验服的调整中，宫本的被动输出改成了（长刀）+（刀势）的输出，也就是宫本在释放技能以后，就可以获得长刀的80%物理伤害，并且附加刀势的法术伤害。而在前期对方缺少魔抗装备的情况下，法术伤害也更加具有威胁。" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/teacher_introduction_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:foreground="?attr/selectableItemBackground"
                android:visibility="gone"
                app:cardBackgroundColor="@color/font_white"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false"
                tools:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <com.sugar.library.ui.view.CircleImageView
                            android:id="@+id/avatar_civ"
                            android:layout_width="@dimen/dp55"
                            android:layout_height="@dimen/dp55"
                            tools:src="@mipmap/ic_temp7" />

                        <TextView
                            android:id="@+id/teacher_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/avatar_civ"
                            android:textColor="@color/color_first_level"
                            android:textSize="@dimen/sp16"
                            tools:text="哈哈哈很高" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/teacher_name_tv"
                            android:layout_toEndOf="@+id/avatar_civ"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="♂ "
                                android:textStyle="bold"
                                android:textColor="@color/color_first_level"
                                android:textSize="@dimen/font_size_18" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp10"
                                android:layout_marginEnd="@dimen/dp10"
                                android:text="18"
                                android:textColor="@color/color_first_level"
                                android:textSize="@dimen/font_size_18" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="US"
                                android:textColor="@color/color_first_level"
                                android:textSize="@dimen/font_size_18" />

                        </LinearLayout>


                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp10"
                        android:lineSpacingMultiplier="1.2"
                        android:padding="@dimen/dp15"
                        android:textColor="@color/color_first_level"
                        android:textSize="@dimen/sp14"
                        tools:text="宫本武藏首先改动的就是被动技能，因为以往宫本的输出主要靠释放技能后的120（+25%物理加成）点物理伤害和大招的定点控制。但这样的输出显然很难在后期对敌方有足够的威胁，再加上目前射手版本都会选择非常肉的前排，这导致宫本武藏很难打出致命的输出。
而在体验服的调整中，宫本的被动输出改成了（长刀）+（刀势）的输出，也就是宫本在释放技能以后，就可以获得长刀的80%物理伤害，并且附加刀势的法术伤害。而在前期对方缺少魔抗装备的情况下，法术伤害也更加具有威胁。" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentTop="true"
        android:alpha="0.99"
        android:background="@drawable/shape_title_bar"
        android:paddingBottom="@dimen/dp1">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/TopButton"
            android:contentDescription="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="课程详情"
            android:textColor="@color/color_zero_level"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_temp2" />


    </RelativeLayout>


</RelativeLayout>