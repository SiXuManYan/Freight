<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_list_gray_background"
    android:orientation="vertical">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp45"
            android:paddingEnd="@dimen/dp15"
            android:paddingBottom="@dimen/dp45">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/after_class_task"
                android:textColor="@color/color_first_level"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp124"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_30afe4"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <TextView
                    android:id="@+id/task_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:lineSpacingMultiplier="1.2"
                    tools:text="Readingkids L2 M9 \n我的课后任务"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp18" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/download_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp45"
                    android:layout_weight="1"
                    android:background="@drawable/shape_12_yellow"
                    android:gravity="center"
                    android:text="@string/task_download"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/upload_tv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp45"
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp8"
                    android:background="@drawable/shape_12_yellow"
                    android:gravity="center"
                    android:text="@string/task_upload"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp10"
                android:paddingBottom="@dimen/dp10">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/after_class_task2"
                    android:textColor="@color/color_first_level"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/remaining_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="@string/remaining_appointments"
                    android:textColor="@color/color_first_level"
                    android:textSize="@dimen/sp12" />


            </RelativeLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_5cbebc"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <LinearLayout
                    android:id="@+id/reading_task_container_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10">

                    <include layout="@layout/item_reading_task_container_child" />

                    <include layout="@layout/item_reading_task_container_child" />

                    <include layout="@layout/item_reading_task_container_child" />

                    <include layout="@layout/item_reading_task_container_child" />

                    <include layout="@layout/item_reading_task_container_child" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/book"
        android:layout_width="@dimen/dp165"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp25"
        android:background="@drawable/shape_12_yellow"
        android:gravity="center"
        android:text="@string/book_appointment"
        android:textColor="@color/font_white"
        android:textSize="@dimen/sp15" />

    <include layout="@layout/inc_title_bar" />


</RelativeLayout>