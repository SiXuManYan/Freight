<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_list_gray_background">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp15"
            android:paddingTop="@dimen/dp45"
            android:paddingEnd="@dimen/dp15"
            android:paddingBottom="@dimen/dp45">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp147"
                android:layout_marginTop="@dimen/dp10"
                android:layout_marginBottom="@dimen/dp10"
                android:background="@color/font_white"
                android:foreground="?attr/selectableItemBackground"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/color_5cbebc" />

            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/student_container_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.sugar.library.ui.view.CircleImageView
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_marginEnd="@dimen/dp5"
                        android:src="@mipmap/ic_launcher_round" />

                    <com.sugar.library.ui.view.CircleImageView
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_marginEnd="@dimen/dp5"
                        android:src="@mipmap/ic_launcher_round" />

                    <com.sugar.library.ui.view.CircleImageView
                        android:layout_width="@dimen/dp25"
                        android:layout_height="@dimen/dp25"
                        android:layout_marginEnd="@dimen/dp5"
                        android:src="@mipmap/ic_launcher_round" />

                </LinearLayout>

                <TextView
                    android:id="@+id/student_count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="等100人学习"
                    android:textColor="@color/color_first_level"
                    android:textSize="@dimen/sp14" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:text="老师介绍"
                android:textColor="@color/color_first_level"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp10"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@color/color_ffdb91"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp10"
                    android:paddingTop="@dimen/dp10"
                    android:paddingEnd="@dimen/dp10"
                    android:paddingBottom="@dimen/dp10">

                    <ImageView
                        android:layout_width="@dimen/dp0"
                        android:layout_height="@dimen/dp137"
                        android:layout_marginEnd="@dimen/dp15"
                        android:layout_weight="1"
                        android:src="@mipmap/ic_temp3" />


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp10"
                            android:text="Kaylene Humphreys"
                            android:textColor="@color/color_8b391b"
                            android:textSize="@dimen/sp20" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lineSpacingMultiplier="1.2"
                            android:layout_marginBottom="@dimen/dp10"
                            android:text="墨尔本大学教育硕士, 曾在墨尔本多所学校任教, 现任墨尔本小学P.L.C全职教师
拥有先进教学理念，以及十余年小学阶段英文口语、阅读、写作一线教学经验
讲求教学艺术，富有亲和力，带动学习兴趣，拓展学生视野，引领孩子不断提高英语应用水平"
                            android:textColor="@color/color_8b391b"
                            android:textSize="@dimen/sp11" />


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dp10"
                android:text="课程详情"
                android:textColor="@color/color_first_level"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/dp10"
                android:foreground="?attr/selectableItemBackground"
                android:minHeight="@dimen/dp147"
                app:cardBackgroundColor="@color/color_d474b3"
                app:cardCornerRadius="@dimen/dp12"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <TextView
                    android:padding="@dimen/dp15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:lineSpacingMultiplier="1.2"
                    android:text="宫本武藏首先改动的就是被动技能，因为以往宫本的输出主要靠释放技能后的120（+25%物理加成）点物理伤害和大招的定点控制。但这样的输出显然很难在后期对敌方有足够的威胁，再加上目前射手版本都会选择非常肉的前排，这导致宫本武藏很难打出致命的输出。
而在体验服的调整中，宫本的被动输出改成了（长刀）+（刀势）的输出，也就是宫本在释放技能以后，就可以获得长刀的80%物理伤害，并且附加刀势的法术伤害。而在前期对方缺少魔抗装备的情况下，法术伤害也更加具有威胁。"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp11" />



            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp45"
        android:layout_alignParentTop="true"
        android:alpha="0.99"
        android:background="@drawable/shape_title_bar"
        android:paddingBottom="@dimen/dp1">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/TopButton"
            android:contentDescription="@null"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:lines="1"
            android:text="课程详情"
            android:textColor="@color/color_zero_level"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/share_iv"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_temp2" />


    </RelativeLayout>


</RelativeLayout>