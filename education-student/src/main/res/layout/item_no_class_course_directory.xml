<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ff9242"
    android:minHeight="@dimen/dp60"
    android:padding="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp10"
    tools:showIn="@layout/activity_no_class">

    <FrameLayout
        android:id="@+id/level_fl"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp10"
        android:background="@color/font_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1"
            android:textColor="@color/color_ff7a18"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/level_fl"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/course_directory_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_white"
            android:textSize="@dimen/sp14"
            tools:text="3~6岁小朋友学习资料" />


        <TextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/font_white"
            android:textSize="@dimen/sp14"
            tools:text="25分钟" />


    </RelativeLayout>


    <TextView
        android:id="@+id/time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_rl"
        android:layout_toEndOf="@+id/level_fl"
        android:textColor="@color/font_white"
        android:textSize="@dimen/sp14"
        tools:text="2020年9月29日 14:59" />

</RelativeLayout>