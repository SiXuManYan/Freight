<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp15"
    android:paddingTop="@dimen/dp0"
    android:paddingEnd="@dimen/dp15"
    android:paddingBottom="@dimen/dp10">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="课程表"
        android:textColor="@color/color_first_level"
        android:textSize="@dimen/sp18"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:minHeight="@dimen/dp140"
        app:cardBackgroundColor="@color/color_d474b3"
        app:cardCornerRadius="@dimen/dp12"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="老师"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp16" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="课程表"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/color_80ffffff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/teacher_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp10"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.sugar.library.ui.view.CircleImageView
                        android:id="@+id/avatar_iv"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="@dimen/dp60"
                        android:src="@mipmap/ic_temp3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.2"
                        android:text="James"
                        android:textColor="@color/color_80ffffff"
                        android:textSize="@dimen/sp13" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/zero_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周日"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/one_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周一"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/two_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周二"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/three_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周三"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/four_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周四"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/five_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周五"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/six_tv"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周六 "
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周六 "
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周六 "
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:text="周六 "
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp11"
                            android:textStyle="bold"
                            android:visibility="invisible" />


                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>