<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp15"
    android:paddingTop="@dimen/dp0"
    android:paddingEnd="@dimen/dp15"
    android:paddingBottom="@dimen/dp10">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/color_d474b3"
        app:cardCornerRadius="@dimen/dp12"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/teacher"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/course_table"
                    android:textColor="@color/font_white"
                    android:textSize="@dimen/sp10"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dp5"
                android:layout_marginBottom="@dimen/dp5"
                android:background="@color/color_80ffffff" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/teacher_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp8"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.sugar.library.ui.widget.CircleImageView
                        android:id="@+id/avatar_iv"
                        android:layout_width="@dimen/dp45"
                        android:layout_height="@dimen/dp45"
                        android:src="@mipmap/ic_temp3" />

                    <TextView
                        android:id="@+id/teacher_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp2"
                        android:ellipsize="end"
                        android:lineSpacingMultiplier="1.2"
                        android:textColor="@color/color_80ffffff"
                        android:textSize="@dimen/sp8"
                        tools:text="James" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/week_ll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/zero_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周日" />


                        <TextView
                            android:id="@+id/one_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周一" />


                        <TextView
                            android:id="@+id/two_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周二" />

                        <TextView
                            android:id="@+id/three_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周三" />

                        <TextView
                            android:id="@+id/four_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周四" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp5"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/five_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周五" />


                        <TextView
                            android:id="@+id/six_tv"
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            tools:text="周六 " />

                        <TextView
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:text="周六 " />

                        <TextView
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:text="周六 " />

                        <TextView
                            android:layout_width="@dimen/dp26"
                            android:layout_height="@dimen/dp26"
                            android:layout_marginEnd="@dimen/dp8"
                            android:background="@drawable/stock_8_gray_40ffffff"
                            android:gravity="center"
                            android:textColor="@color/font_white"
                            android:textSize="@dimen/sp8"
                            android:textStyle="bold"
                            android:visibility="invisible"
                            tools:text="周六 " />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>