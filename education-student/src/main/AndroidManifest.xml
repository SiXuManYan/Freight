<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ftacloud.student">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 震动 -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- 录音 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!--播音-->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- 读写内存卡 -->
    <uses-permission-sdk-23 android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission-sdk-23 android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application
        android:name=".ui.app.CloudAccountApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_temp4"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_temp4"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:networkSecurityConfig"
        tools:targetApi="n">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.fatcloud.account.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>


        <activity
            android:name=".ui.splash.SplashActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/LaunchTheme">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- 网页内打开 -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="splash_h5"
                    android:scheme="freight_user" />
            </intent-filter>


        </activity>

        <activity
            android:name=".MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:launchMode="singleTask" />


        <activity
            android:name=".ui.account.WelcomeActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.account.login.LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name=".ui.account.register.RegisterActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.account.forget.ForgetActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.webs.WebCommonActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.account.bind.BindPhoneActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.settings.SettingActivity" />
        <activity android:name=".ui.tests.TestConditionActivity" />
        <activity android:name=".ui.course.my.detail.CourseDetailActivity" />
        <activity android:name=".ui.message.MessageActivity" />
        <activity android:name=".ui.course.schedule.ClassScheduleActivity" />
        <activity android:name=".ui.course.my.MyCourseActivity" />
        <activity android:name=".ui.task.detail.TaskDetailActivity" />
        <activity android:name=".ui.task.TaskActivity" />
        <activity android:name=".ui.tests.my.MyTestActivity" />
        <activity android:name=".ui.course.schedule.detail.NoClassActivity" />
        <activity android:name=".ui.user.UserActivity" />
        <activity android:name=".ui.order.list.MyVoucherActivity" />

    </application>

</manifest>